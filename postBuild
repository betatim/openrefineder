#!/bin/bash
set -e

wget -q -O openrefine-2.8.tar.gz https://github.com/OpenRefine/OpenRefine/releases/download/2.8/openrefine-linux-2.8.tar.gz
tar xzf openrefine-2.8.tar.gz

pip install https://github.com/jupyterhub/nbserverproxy/archive/master.zip
jupyter serverextension enable --py nbserverproxy

pip install -e.

jupyter serverextension enable  --py nbopenrefineproxy
jupyter nbextension     install --py nbopenrefineproxy
jupyter nbextension     enable  --py nbopenrefineproxy
